/**index.wxss**/
.page {
  padding: 1px 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo__avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo__nickname {
  color: #aaa;
}


.preview {
  display: flex;
  margin: 20rpx;
  background: #FFF;
  border-radius:16rpx;
  box-shadow:0 4rpx 16rpx 0 rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
  padding: 20rpx;
  margin-bottom: 60rpx;
}

.preview__img {
  flex: 0 0 384rpx;
  background: #ff613b;
  width: 384rpx;
  height: 288rpx;
  border-radius:8rpx;
}
.preview__info {
  flex: 1 1;
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
  overflow: hidden;
}

.preview__title {
  font-size: 40rpx;
  line-height: 2;
  font-weight: bold;
  color:#333;
}
.preview__desc {
  font-size: 15px;
  line-height: 1.2;
  color: #999;
  padding-bottom: 10rpx;
}
.preview__btn {
  width: 180rpx;
  line-height: 60rpx;
  border-radius: 200rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-image: linear-gradient(-135deg, #E21712 0%, #FF613B 100%);
}

.category {
  margin: 0 20rpx;
  display: grid;
  grid: repeat(4, 100rpx) / repeat(4, 1fr);
  grid-gap: 20rpx;
}

.category__item {
  background: #ccc;
  font-size: 30rpx;
  line-height: 2;
  border-radius:16rpx;
  box-shadow:0 4rpx 16rpx 0 rgba(0, 0, 0, 0.15);
  padding: 0 20rpx;
  color: #FFF;
}

.search-bar {
  margin: 20rpx;
  background: #FFF;
  box-sizing: border-box;
  border-radius: 40rpx;
  box-shadow:0 4rpx 16rpx 0 rgba(0, 0, 0, 0.15);
  padding: 10rpx 0rpx;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}
