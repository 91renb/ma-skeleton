<view
  style="width: {{skeletonWidth}}px; height: {{skeletonHeight}}px; background-color: {{bgcolor}};"
  class="skeleton skeleton_{{loading}}"
  wx:if="{{ isShowByDev }}"
>
  <block wx:for="{{ isDev ? devData.elements : data.element }}" wx:for-item="list" wx:key="type">
    <view
      wx:for="{{ list.elements }}"
      wx:for-item="item"
      class="skeleton__item skeleton__item_{{ list.type }}"
      style="{{ item }}"
    />
  </block>
  <view class="skeleton__spinbox">
    <view class="skeleton__spin" />
  </view>
  <view class="skeleton__shine" />
</view>
<view wx:else>
  <slot></slot>
</view>
<skeleton-btn
  wx:if="{{ isDev }}"
  selector="{{ selector }}"
  isShow="{{ isShowByDev }}"
  selectorTypes="{{ selectorTypes }}"
  bindupdateData="handleUpdateData"
  bindtoggleShow="handleToggleShow"
></skeleton-btn>
